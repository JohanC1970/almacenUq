package Almacen.model;

public class Cliente extends Persona{

	private String fechaNacimiento;
	private String email;
	private String nit;


	public Cliente(String nombres, String apellidos, String identificacion, String direccion, String telefono,
			TipoPersona tipoPersona, String fechaNacimiento, String email, String nit) {
		super(nombres, apellidos, identificacion, direccion, telefono, tipoPersona);

		//Comprobacion de que la persona sea natural y llenar los datos correspondientes
		if(tipoPersona.equals(TipoPersona.NATURAL)){
			this.fechaNacimiento = fechaNacimiento;
			this.email = email;
			this.nit = "";
		}else{ // En caso contrario se llena los datos correspondientes a una persona juridica
			this.nit = nit;
			this.fechaNacimiento = "";
			this.email = "";
		}
	}


}
